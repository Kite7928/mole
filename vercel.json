{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "wechat-ai-writer-pro",
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/.next",
  "framework": "nextjs",
  "installCommand": "cd frontend && npm install",
  "devCommand": "cd frontend && npm run dev",
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "description": "后端 API 地址",
      "value": "https://your-domain.vercel.app/api"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL 数据库连接字符串（从 Vercel Postgres 自动获取）"
    },
    "REDIS_URL": {
      "description": "Redis 连接字符串（从 Upstash Redis 自动获取）"
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API Key"
    },
    "OPENAI_BASE_URL": {
      "description": "OpenAI API Base URL",
      "value": "https://api.openai.com/v1"
    },
    "WECHAT_APP_ID": {
      "description": "微信公众号 App ID"
    },
    "WECHAT_APP_SECRET": {
      "description": "微信公众号 App Secret"
    },
    "SECRET_KEY": {
      "description": "应用密钥（使用 openssl rand -hex 32 生成）"
    }
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.10",
      "NODE_VERSION": "18"
    }
  },
  "functions": {
    "backend/app/api/**/*.py": {
      "runtime": "python3.10",
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/app/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,PUT,DELETE,OPTIONS,PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-news",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/hot-topics",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    }
  ],
  "regions": ["sin1"],
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": false
  }
}
